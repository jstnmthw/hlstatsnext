{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./globals.css": "./dist/index.css",
    "./button": {
      "types": "./dist/components/button.d.ts",
      "import": "./dist/components/button.js"
    },
    "./badge": {
      "types": "./dist/components/badge.d.ts",
      "import": "./dist/components/badge.js"
    },
    "./card": {
      "types": "./dist/components/card.d.ts",
      "import": "./dist/components/card.js"
    },
    "./breadcrumb": {
      "types": "./dist/components/breadcrumb.d.ts",
      "import": "./dist/components/breadcrumb.js"
    },
    "./icons": {
      "types": "./dist/icons.d.ts",
      "import": "./dist/icons.js"
    },
    "./lib/utils": {
      "types": "./dist/lib/utils.d.ts",
      "import": "./dist/lib/utils.js"
    }
  },
  "scripts": {
    "build:styles": "tailwindcss -i ./src/globals.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/globals.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "clean": "rm -rf node_modules",
    "ui": "pnpm dlx shadcn@latest"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.8",
    "@types/react": "19.1.0",
    "eslint": "^9.30.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.513.0",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.4"
  }
}
