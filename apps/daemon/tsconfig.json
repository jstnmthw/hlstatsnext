{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/modules/*": ["modules/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
