{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "FRONTEND_URL",
    "PORT",
    "VITEST",
    "LOG_LEVEL",
    "INGRESS_PORT",
    "MAXMIND_ACCOUNT_ID",
    "MAXMIND_LICENSE_KEY",
    "RABBITMQ_URL",
    "RCON_ENABLED",
    "RCON_TIMEOUT",
    "RCON_MAX_RETRIES",
    "RCON_STATUS_INTERVAL",
    "RCON_ACTIVE_SERVER_MAX_AGE_MINUTES",
    "RCON_MAX_CONSECUTIVE_FAILURES",
    "RCON_BACKOFF_MULTIPLIER",
    "RCON_MAX_BACKOFF_MINUTES",
    "RCON_DORMANT_RETRY_MINUTES",
    "RCON_SCHEDULE_ENABLED",
    "RCON_SCHEDULE_DEFAULT_TIMEOUT_MS",
    "RCON_SCHEDULE_MAX_CONCURRENT_PER_SERVER",
    "RCON_SCHEDULE_HISTORY_RETENTION_HOURS",
    "ENCRYPTION_KEY",
    "DB_MAX_CONNECTIONS",
    "DB_MIN_CONNECTIONS",
    "DB_CONNECTION_TIMEOUT",
    "DB_IDLE_TIMEOUT",
    "DB_HEALTH_CHECK_INTERVAL",
    "DB_MAX_RETRIES",
    "CACHE_ENABLED",
    "CACHE_HOST",
    "CACHE_PORT",
    "CACHE_PASSWORD",
    "CACHE_KEY_PREFIX",
    "CACHE_DEFAULT_TTL",
    "CACHE_RETRY_DELAY",
    "CACHE_MAX_RETRIES"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "graphql:codegen": {
      "cache": false
    },
    "graphql:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:fresh": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    },
    "db:seed:geo": {
      "cache": false
    },
    "db:geo:update": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:test:prepare": {
      "cache": false
    },
    "db:test:reset": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:coverage": {
      "cache": false
    }
  }
}
