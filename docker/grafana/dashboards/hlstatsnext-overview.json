{
  "uid": "hlstatsnext-overview",
  "title": "HLStatsNext - Overview",
  "tags": ["hlstatsnext", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "weekStart": "",
  "panels": [
    {
      "id": 1,
      "title": "Events Processed per Second",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(events_processed_total[1m])",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"}
      }
    },
    {
      "id": 2,
      "title": "Database Query Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(database_queries_total[1m])",
          "legendFormat": "{{operation}} - {{table}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"}
      }
    },
    {
      "id": 3,
      "title": "Database Query Duration (p95)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
          "legendFormat": "{{operation}} - {{table}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        }
      ]
    },
    {
      "id": 4,
      "title": "Database Query Duration (p99)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(database_query_duration_seconds_bucket[5m]))",
          "legendFormat": "{{operation}} - {{table}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        }
      ]
    },
    {
      "id": 5,
      "title": "Slow Queries (> 1s)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(database_query_duration_seconds_bucket{le=\"1\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 6,
      "title": "Failed Queries",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(database_queries_total{success=\"false\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "green"},
            {"value": 1, "color": "red"}
          ]
        }
      }
    },
    {
      "id": 7,
      "title": "Queue Depth",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "queue_depth",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 8,
      "title": "Active Players",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
      "targets": [
        {
          "expr": "active_players_count",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 9,
      "title": "Queries by Table",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "sum by (table) (rate(database_queries_total[5m]))",
          "legendFormat": "{{table}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"}
      }
    },
    {
      "id": 10,
      "title": "Queries by Operation",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "sum by (operation) (rate(database_queries_total[5m]))",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"}
      }
    },
    {
      "id": 11,
      "title": "Event Processing Duration (p95)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(event_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "{{event_type}} - {{module}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        }
      ]
    },
    {
      "id": 12,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "RSS Memory",
          "refId": "A"
        },
        {
          "expr": "process_heap_bytes",
          "legendFormat": "Heap Memory",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory"
        }
      ]
    }
  ]
}
