{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules dist .turbo",
    "db:generate": "rm -rf generated/prisma && prisma generate --no-hints",
    "db:fresh": "tsx src/reset.ts",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && prisma db push && pnpm db:seed && pnpm db:seed:geo",
    "db:seed:geo": "tsx src/scripts/seed-geoip.ts",
    "db:geo:update": "tsx src/scripts/seed-geoip.ts update",
    "db:seed": "pnpm db:run-sql src/sql/default-seeder.sql",
    "db:dev:seed": "tsx src/seed.ts",
    "db:run-sql": "tsx src/scripts/run-sql.ts",
    "db:test:prepare": "dotenv -e .env.test -- prisma db push",
    "db:test:reset": "dotenv -e .env.test -- prisma migrate reset --force && dotenv -e .env.test -- prisma db push",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@prisma/client-runtime-utils": "^7.4.0",
    "dbgate-query-splitter": "^4.11.9",
    "dotenv": "^17.3.1",
    "prisma": "^7.4.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@pothos/core": "^4.12.0",
    "@pothos/plugin-prisma": "^4.14.2",
    "@pothos/plugin-relay": "^4.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "@types/unzipper": "^0.10.11",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "glob": "^13.0.3",
    "prisma-generator-pothos-codegen": "^0.7.2",
    "ts-deepmerge": "^7.0.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "exports": {
    "./client": "./src/client.ts",
    "./seed": "./src/seed.ts",
    "./reset": "./src/reset.ts",
    "./graphql/types": "./generated/graphql/pothos-types.ts",
    "./graphql/inputs": "./generated/graphql/pothos-inputs.ts",
    "./graphql/crud": "./generated/graphql/pothos-inputs/autocrud.ts"
  }
}
