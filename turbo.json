{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "FRONTEND_URL",
    "PORT",
    "VITEST",
    "LOG_LEVEL",
    "INGRESS_PORT",
    "MAXMIND_ACCOUNT_ID",
    "MAXMIND_LICENSE_KEY",
    "RABBITMQ_URL",
    "RCON_ENABLED",
    "RCON_TIMEOUT",
    "RCON_MAX_RETRIES",
    "RCON_STATUS_INTERVAL",
    "RCON_ACTIVE_SERVER_MAX_AGE_MINUTES",
    "ENCRYPTION_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "graphql:codegen": {
      "cache": false
    },
    "graphql:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:fresh": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    },
    "db:seed:geo": {
      "cache": false
    },
    "db:geo:update": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:test:prepare": {
      "cache": false
    },
    "db:test:reset": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:coverage": {
      "cache": false
    }
  }
}
