{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "pnpm build && tsx watch src/index.ts",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "clean": "rm -rf node_modules dist .turbo src/generated",
    "db:generate": "cp -r ../../packages/database/src/generated/graphql ./src/generated"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.23",
    "@pothos/core": "^4.6.2",
    "@pothos/plugin-prisma": "^4.8.2",
    "@pothos/plugin-relay": "^4.4.2",
    "@pothos/plugin-with-input": "^4.1.1",
    "@repo/database": "workspace:*",
    "cors": "^2.8.5",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.13.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.18",
    "@types/node": "^24.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.30.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  }
}
