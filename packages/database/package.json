{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules dist .turbo",
    "db:generate": "rm -rf src/generated && prisma generate --no-hints",
    "db:fresh": "tsx src/reset.ts",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && prisma db push",
    "db:seed": "tsx src/seed.ts",
    "db:run-sql": "tsx src/scripts/run-sql.ts",
    "db:test:prepare": "dotenv -e .env.test -- prisma db push --skip-generate",
    "db:test:reset": "dotenv -e .env.test -- prisma migrate reset --force --skip-generate && dotenv -e .env.test -- prisma db push --skip-generate",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.10.0",
    "dbgate-query-splitter": "^4.11.5",
    "prisma": "^6.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@pothos/core": "^4.6.2",
    "@pothos/plugin-prisma": "^4.8.2",
    "@pothos/plugin-relay": "^4.4.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.0",
    "glob": "^11.0.0",
    "prisma-generator-pothos-codegen": "^0.7.1",
    "ts-deepmerge": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    },
    "./builder": {
      "types": "./dist/src/builder.d.ts",
      "default": "./dist/src/builder.js"
    },
    "./seed": {
      "types": "./dist/src/seed.d.ts",
      "default": "./dist/src/seed.js"
    },
    "./reset": {
      "types": "./dist/src/reset.d.ts",
      "default": "./dist/src/reset.js"
    },
    "./graphql/types": {
      "types": "./dist/generated/graphql/pothos-types.d.ts",
      "default": "./dist/generated/graphql/pothos-types.js"
    },
    "./graphql/inputs/*": {
      "types": "./dist/generated/graphql/pothos-inputs/*.d.ts",
      "default": "./dist/generated/graphql/pothos-inputs/*.js"
    },
    "./graphql/crud": {
      "types": "./dist/generated/graphql/pothos-inputs/autocrud.d.ts",
      "default": "./dist/generated/graphql/pothos-inputs/autocrud.js"
    }
  }
}
