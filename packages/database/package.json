{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "db:generate": "rm -rf generated && prisma generate",
    "db:fresh": "tsx src/reset.ts",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && prisma db push",
    "db:seed": "tsx src/seed.ts",
    "db:run-sql": "tsx src/scripts/run-sql.ts",
    "db:test:prepare": "dotenv -e .env.test -- prisma db push --skip-generate",
    "db:test:reset": "dotenv -e .env.test -- prisma migrate reset --force --skip-generate && dotenv -e .env.test -- prisma db push --skip-generate",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules dist .turbo",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "dbgate-query-splitter": "^4.11.5",
    "prisma": "^6.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@pothos/core": "^4.6.2",
    "@pothos/plugin-prisma": "^4.8.2",
    "@pothos/plugin-relay": "^4.4.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "prisma-generator-pothos-codegen": "^0.7.1",
    "ts-deepmerge": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "5.8.2"
  },
  "exports": {
    "./client": "./dist/client.js",
    "./seed": "./dist/seed.js",
    "./reset": "./dist/reset.js",
    "./graphql/types": "./dist/generated/pothos-types.js",
    "./graphql/inputs": "./dist/generated/pothos-inputs.js",
    "./graphql/crud": "./dist/generated/pothos-inputs/autocrud.ts"
  }
}
