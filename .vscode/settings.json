{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.formatOnSave": true,
  
  // File associations for AMX Mod X files
  "files.associations": {
    "*.inc": "sourcepawn",
    "*.sma": "sourcepawn"
  },
  
  // Disable formatting for SourcePawn files to prevent syntax corruption
  "[sourcepawn]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
}
