{
  "name": "hlstatsnext.com",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "codegen": "turbo run graphql:codegen",
    "db:fresh": "turbo run db:fresh",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:reset": "turbo run db:reset",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "db:test:prepare": "turbo run db:test:prepare",
    "db:test:reset": "turbo run db:test:reset",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "ui": "pnpm --filter @repo/ui ui",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=24.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@prisma/client": "6.11.1",
        "prisma": "6.11.1"
      }
    },
    "onlyBuiltDependencies": [
      "msgpackr-extract"
    ]
  }
}
