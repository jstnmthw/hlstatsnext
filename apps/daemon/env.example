NODE_ENV=development

# Logging Configuration  
# Supported levels: error, warn, info, debug
LOG_LEVEL=info

# Ingress Server Configuration
# UDP port for receiving game server logs (default: 27500)
INGRESS_PORT=27500

# RabbitMQ Configuration
RABBITMQ_URL=amqp://hlstats:hlstats@localhost:5672/hlstats
RABBITMQ_USER=hlstats
RABBITMQ_PASSWORD=hlstats
RABBITMQ_VHOST=hlstats

# RCON Configuration
# Enable/disable RCON functionality
RCON_ENABLED=true

# RCON connection timeout in milliseconds
RCON_TIMEOUT=5000

# Maximum number of RCON connection retries
RCON_MAX_RETRIES=3

# RCON status monitoring interval in milliseconds (30 seconds)
RCON_STATUS_INTERVAL=30000