{
  "name": "@repo/observability",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules dist .turbo",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run --silent --passWithNoTests",
    "test:watch": "vitest --watch"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./prometheus": {
      "types": "./dist/prometheus/index.d.ts",
      "default": "./dist/prometheus/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma/index.d.ts",
      "default": "./dist/prisma/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "dependencies": {
    "@repo/database": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
