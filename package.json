{
  "name": "hlstatsnext.com",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "check-all": "turbo run check-types && turbo run lint && pnpm format:fix",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "codegen": "turbo run graphql:codegen",
    "db:fresh": "turbo run db:fresh",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:reset": "turbo run db:reset",
    "db:seed": "turbo run db:seed",
    "db:seed:geo": "turbo run db:seed:geo",
    "db:geo:update": "turbo run db:geo:update",
    "db:studio": "turbo run db:studio",
    "db:test:prepare": "turbo run db:test:prepare",
    "db:test:reset": "turbo run db:test:reset",
    "dev": "turbo run dev",
    "format": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky",
    "ui": "pnpm --filter @repo/ui ui",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@prisma/client": "6.14.0",
        "prisma": "6.14.0"
      }
    },
    "onlyBuiltDependencies": [
      "msgpackr-extract"
    ],
    "overrides": {
      "node-domexception": "file:./packages/node-domexception-stub"
    }
  }
}
